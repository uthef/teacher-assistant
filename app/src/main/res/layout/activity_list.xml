<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".activities.GroupListActivity" android:id="@+id/list_root">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_button"
            android:contentDescription="@string/element_addition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="@+id/list_view"
            app:layout_constraintEnd_toEndOf="@+id/list_view"
            app:srcCompat="@drawable/ic_baseline_add_24"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
            android:id="@+id/empty_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:alpha="0"
            android:textAlignment="center"
            android:text="@string/empty_label"
            app:layout_constraintBottom_toBottomOf="@+id/list_view"
            app:layout_constraintEnd_toEndOf="@+id/list_view"
            app:layout_constraintStart_toStartOf="@+id/list_view"
            app:layout_constraintTop_toTopOf="@+id/list_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>